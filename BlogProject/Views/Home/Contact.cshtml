@using PersonalBlog.ViewModels
@model ContactMe

@{
    ViewData["Title"] = "Contact";
}

<!-- =======================
Inner intro START -->
<section class="pt-4">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card card-overlay-bottom h-300 overflow-hidden text-center" style="background-image: url(/images/contact.jpg); background-position: center left; background-size: cover;">
                    <!-- Card Image overlay -->
                    <div class="card-img-overlay d-flex align-items-center p-3 pb-4 px-sm-5">
                        <div class="col-12 mt-auto d-md-flex justify-content-between align-items-center">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- =======================
Inner intro END -->
<!-- =======================
<!-- =======================
Inner intro END -->
<!-- =======================
Contact info START -->
<section class="pt-4">
    <div class="container">
        <div class="row">
            <div class="col-xl-12 mx-auto">

                <div class="row">
                    <div class="col-lg-9 text-center">
                        <h1>Contact Me</h1>
                        <p>I am always open to discussing new projects, creative ideas or opportunities to be a part of your visions.</p>
                        <!-- Form START -->
                        <form class="contact-form" id="contact-form" asp-action="Contact">
                            <!-- Main form -->
                            <div class="row">
                                <div class="col-md-6">
                                    <!-- name -->
                                    <div class="mb-3">
                                        <input required id="con-name" asp-for="Name" type="text" class="form-control" placeholder="Name">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <!-- email -->
                                    <div class="mb-3">
                                        <input required id="con-email" asp-for="Email" type="email" class="form-control" placeholder="E-mail">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <!-- Subject -->
                                    <div class="mb-3">
                                        <input id="con-subject" asp-for="Subject" type="text" class="form-control" placeholder="Subject">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <!-- Message -->
                                    <div class="mb-3">
                                        <textarea required asp-for="Message" cols="40" rows="8" class="form-control" placeholder="Message"></textarea>
                                    </div>
                                </div>
                                <!-- submit button -->
                                <div class="col-md-12 text-start"><button onclick="return confirmEmail()" class="btn btn-primary w-100" type="submit">Send Message</button></div>
                            </div>
                        </form>
                        <!-- Form END -->
                    </div>

                    <div class="col-lg-3 col-xs-12 text-center">
                        <div class="social-box mt-3">
                            <div class="box">
                                <i class="fa fa-envelope-open fa-3x" aria-hidden="true"></i>
                                <h3>Email</h3>
                                <div class="box-text">
                                    <a href="mailto:coder.isiah.jones@gmail.com">coder.isiah.jones@gmail.com</a>
                                </div>
                            </div>
                            <div class="box">
                                <i class="fa fa-phone-square fa-3x" aria-hidden="true"></i>
                                <h3>Call</h3>
                                <div class="box-text">
                                    <a href="tel:+12608049540">+1 260 804 9540</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>  <!-- Col END -->

            <iframe class="w-100 h-300 grayscale" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d96235.89942783523!2d-85.22093964117667!3d41.082721190383715!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8815e4ddff22814b%3A0x80077b147642f793!2sFort%20Wayne%2C%20IN!5e0!3m2!1sen!2sus!4v1633882787909!5m2!1sen!2sus" height="500" style="border:0;" aria-hidden="false" tabindex="0"></iframe>

        </div>
    </div>
</section>
<!-- =======================
Contact info END -->

<script>
    function confirmEmail() {

        Swal.fire({
            position: 'center',
            icon: 'success',
            title: 'Sent!',
            html: 'Thank you for your message! <br> I will get back to you as soon as possible!',
            showConfirmButton: true,
        }).then(() => {
            $('#contact-form').submit();
            return true;
        })
        return false;
    }
</script>